<%= simple_form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :order_number %><br>
    <%= f.text_field :order_number %>
  </div>
  <div class="field">
    <%= f.label :order_status %><br>
    <%= f.number_field :order_status %>
  </div>
  <div class="field">
    <%= f.label :order_payment_status %><br>
    <%= f.text_field :order_payment_status %>
  </div>
  
   <div id='order_lines'>
    <%= f.simple_fields_for :order_lines do |order_line| %>
      <%= render 'order_line_fields', :f => order_line %>
    <% end %>
    <div class='links'>
      <%= link_to_add_association 'add line', f, :order_lines %>
    </div>
  </div>
    <%= f.submit 'Save' %>
  
<% end %>
