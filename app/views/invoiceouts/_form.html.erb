<%= simple_form_for(@invoiceout) do |f| %>
  <%= f.error_notification %>

    
<div class="col-md-12">
	<div class="col-md-8">
		<div class="col-md-12">
			<div class="col-md-2">
			<%= f.input :number %>
			</div>
			<div class="col-md-10">
				<% if !@invoiceout.date.nil? %>
			    <%= f.input :date, as: :string , :input_html => { :value => @invoiceout.date.strftime("%d/%m/%Y") } %>
			    <%else%>
			    <%= f.input :date, as: :string %>
			    <%end%>
			</div>
		</div>
		<div class="col-md-12">
		<div class="col-md-12">
		<strong>Компания:</strong> <%= @invoiceout.company.title %>
		</div>
		<div class="col-md-12">
		<div class="col-md-6">
		<%= f.input :payment %>
		</div>
		</div>
	</div>
</div>

<div class="col-md-12">
	<div class="col-md-8">
		<table class="table table-hover">
			<thead> 
				<tr>
				<td>Документ</td>
				<td>Сумма</td>
				<td>НДС</td>
				</tr>
			</thead>
			<tbody>
				<tr>
				<th>Накладная <%= @invoiceout.invoice_list.number %></th>
				<th><%= @invoiceout.total_price %></th>
				<th><%= @invoiceout.nds %></th>
				</tr>
			</tbody> 
		</table>
	</div>
</div>

<div class="col-md-12">
<div class="col-md-4">
	<%= f.button :submit, class: 'btn btn-default btn-sm' %>
	<%= link_to 'Show', @invoiceout, class: 'btn btn-default btn-sm'  %>
	<%= link_to 'Back', invoiceout_path, class: 'btn btn-default btn-sm'  %>
	</div>
</div>
<% end %>
</div>