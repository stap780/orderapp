<p id="notice"><%= notice %></p>

<h1>Listing Stocks</h1>

<table>
  <thead>
    <tr>
    	<th>Id</th>
      <th>Product</th>
      <th>Invoice list</th>
      <th>Purchase list</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Store Id</th>
      <th>Loss Id</th>
      <th>Enter Id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
      <td><%= stock.id %></td>
        <td><%= stock.product_id %></td>
        <td><%= stock.invoice_list_id %></td>
        <td><%= stock.purchase_list_id %></td>
        <td><%= stock.quantity %></td>
        <td><%= stock.price %></td>
        <td><%= stock.store_id %></td>
        <td><%= stock.loss_id %></td>
        <td><%= stock.enter_id %></td>
        <td><%= link_to 'Show', stock %></td>
        <td><%= link_to 'Edit', edit_stock_path(stock) %></td>
        <td><%= link_to 'Destroy', stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

