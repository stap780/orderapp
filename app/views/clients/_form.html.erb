<div id="modal-window" class="modal fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style = "background: white; margin: 50px;padding: 15px;"></div>

<%= simple_form_for(@client, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

<div class="col-md-12">
	<div class="col-md-7">	  	
		<div class="col-md-4">    
		<%= f.input :name %>
		</div>
		<div class="col-md-4">  
		<%= f.input :middlename %>
		</div>
		<div class="col-md-4">
		<%= f.input :surname %>
		</div>
		<div class="col-md-6">
		<%= f.input :phone %>
		</div>
		<div class="col-md-6">
		<%= f.input :email %>
		</div>
		<div class="col-md-4">
		<%= f.input :zip %>
		</div>
		<div class="col-md-4">
		<%= f.input :state %>
		</div>
		<div class="col-md-4">
		<%= f.input :city %>
		</div>
		<div class="col-md-12">
		<%= f.input :address %>
		</div>
	</div>
	<div class="col-md-5">
		<div class="col-md-12">
			<table class="table table-hover">
			<thead>
				<tr>
				<th>Title</th>
				<th>Inn</th>
				<th>Banktitle</th>
				</tr>
			</thead>
			<tbody>
			<%@client.companies.each do |cc|%>
				<tr>
				<td><%= link_to "#{cc.title}", cc if cc !=nil %></td>
				<td><%= cc.inn %></td>
				<td><%= cc.banktitle %></td>
				</tr>
			<% end %>
			</tbody>
			</table>
		</div>
		<div class="col-md-12">
		<div class="col-md-12">

		<p><strong>Привязать компанию</strong></p>
		<p>
		<%= label_tag(:myinn, "ИНН:") %>
		<%= autocomplete_field_tag :myinn , '',  autocomplete_company_inn_clients_path, :size => 25, :update_elements => {:title => '#mytitle'} %>
		</p>
		<p>
		<%= label_tag(:mytitle, "Название:") %>
		<%= text_field_tag :mytitle%>
		</p>
		</div>
				
		<div class='col-md-4', style="float:left; margin-top:20px;">
		<%= link_to 'Создать компанию', new_company_path,  :remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window' , class: 'btn btn-default btn-xs'  %>
		</div>
		</div>
		

  </div>  
  
	<div class="col-md-12" style="margin-top:20px;">
	<%= f.button :submit, class: 'btn btn-default btn-sm' %> 
	<%= link_to 'Show', @client, class: 'btn btn-default btn-sm' %> 
	<%= link_to 'Back', clients_path, class: 'btn btn-default btn-sm' %> 
	</div>
</div>

<% end %>
