<% @title = app_name %>
<%= form_tag session_path do %>
  <p>
    <label for="shop">Адрес вашего магазина:</label>
  </p>
  <p>
    http://#{text_field_tag 'shop', @shop, :style => 'width: 300px;'}
    <br/>
    <small>Пример: mysoft.myinsales.ru</small>
  </p>
  <p class="or">
    <%= submit_tag 'Войти', :class => "button" %>
  </p>
<% end %>