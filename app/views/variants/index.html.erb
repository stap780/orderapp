<p id="notice"><%= notice %></p>

<h1>Listing Variants</h1>
Download: <%= link_to "CSV", variants_path(format: "csv") %>
<br>
<%= @variants.count %>

<%= @var%>
<p>| <%= link_to 'Создать варианты в магазине', addvariant_variants_path%> | <!-- <%= link_to 'Обновить остатки', updateqt_variants_path%> | --></p>
<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Variant inid</th>
      <th>Sku</th>
      <th>Cost price</th>
      <th>Price</th>
      <th>Old price</th>
      <th>Quantity</th>
      <th>Weight</th>
      <th>Св-во поставщик</th>
      <th>ID поставщика</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @variants.each do |variant| %>
      <tr>
        <td><%= variant.product_id %></td>
        <td><%= variant.variant_inid %></td>
        <td><%= variant.sku %></td>
        <td><%= variant.cost_price %></td>
        <td><%= variant.price %></td>
        <td><%= variant.old_price %></td>
        <td><%= variant.quantity %></td>
        <td><%= variant.weight %></td>
        <td><%= variant.product_option.title if variant.product_option != nil%></td>
        <td><%= variant.supplier_id %></td>
        <td><%= link_to 'Show', variant %></td>
        <td><%= link_to 'Edit', edit_variant_path(variant) %></td>
        <td><%= link_to 'Destroy', variant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Variant', new_variant_path %>
