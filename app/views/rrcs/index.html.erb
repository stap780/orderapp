<p id="notice"><%= notice %></p>
<div class="col-md-12" style="margin-bottom:20px;">
	<div class="col-md-12">
		<div class="col-md-2">
			<h1>РРС <small>сводная таблица</small></h1>
			<p>Всего товаров - <%= @totalrrcs %></p>
		</div>
		<div class="col-md-3">
		
		</div>
		<div class="col-md-7"><p>Поиск</p>
		<%= search_form_for @search do |f|%>
  		<div classs = "search">
  		<%= f.label :sku_cont, 'по SKU' %> <!--расширение _eq используется для integer -->
  		<%= f.search_field :sku_cont %>  <%= f.submit "Search", class: 'btn btn-default btn-sm' %>
 
  		<%= f.label :title_cont, 'Названию' %> <!--расширение _cont используется для string -->
  		<%= f.search_field :title_cont %>  <%= f.submit "Search", class: 'btn btn-default btn-sm' %>
		</div>
		<% end %>	
		</div>	
	</div>
<br>
	<div class="col-md-12">
	<div class="col-md-8">
<p><%= link_to 'Download products', downloadproduct_rrcs_path%> | <%= link_to 'Update products', updateproduct_rrcs_path%> | Download: <%= link_to "CSV", rrcs_path(format: "csv") %> <!--| <%= link_to "Excel", rrcs_path(format: "xls") %>--></p>

		</div>
</div>

<br>
<div class="col-md-12">
<div class="media">
  <div class="media-body">
<table class="table table-hover">
  <thead>
    <tr>
    	<th>Id</th>
      <th>Sku</th>
      <th>Title</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rrcs.each do |rrc| %>
      <tr>
        <td><%= rrc.id %></td>
        <td><%= rrc.sku %></td>
        <td><%= rrc.title %></td>
        <td><%= rrc.quantity %></td>
        <td><%= link_to 'Show', rrc, class: 'btn btn-default btn-sm' %></td>
        <td><%= link_to 'Edit', edit_rrc_path(rrc), class: 'btn btn-success btn-sm'  %></td>
        <td><%= link_to 'Destroy', rrc, method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: 'Are you sure?' }  %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>


