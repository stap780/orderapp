<p id="notice"><%= notice %></p>
<div class="col-md-12" style="margin-bottom:20px;">
	<div class="col-md-12">
		<div class="col-md-3">
<h2>Служба доставки IML<br><small>  сводная таблица</small></h2>
		</div>
		<div class="col-md-2">
		</div>
		<div class="col-md-7"><p>Поиск</p>
		<%= search_form_for @search do |f|%>
  		<div classs = "search">
  		<%= f.search_field :number_eq, placeholder: 'По номеру' %>  <%= f.submit "Search", class: 'btn btn-default btn-sm' %>  
  		</div>
		<% end %>
		</div>

	</div>
<div class="col-md-12">
		<div class="col-md-5">
			<p>| <%= link_to 'Обновить', updateiml_imls_path%> | </p>
		</div>
</div>
</div>

<div class="col-md-12">
<div class="media">
  <div class="media-body">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Number</th>
      <th>StateNum</th>
      <th>State</th>
      <th>StatusNum</th>
      <th>Status</th>
      <th>Statusdate</th>
      <th>Barcode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @imls.each do |iml| %>
      <tr>
        <td><%= iml.number %></td>
        <td><%= iml.statenum %></td>
        <td><%= iml.state %></td>
        <td><%= iml.statusnum %></td>
        <td><%= iml.status %></td>
        <td><%= iml.statusdate %></td>
        <td><%= iml.barcode %></td>
        <!--<td><%= link_to 'Show', iml %></td>
        <td><%= link_to 'Edit', edit_iml_path(iml) %></td>
        <td><%= link_to 'Destroy', iml, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @imls %>
</div>
</div>
</div>

