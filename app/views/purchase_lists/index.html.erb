<p id="notice"><%= notice %></p>

<h1>Listing Purchase Lists</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Date</th>
      <th>Company</th>
      <th>Total price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchase_lists.each do |purchase_list| %>
      <tr>
        <td><%= purchase_list.number %></td>
        <td><%= purchase_list.date %></td>
        <td><%= purchase_list.company_id %></td>
        <td><%= purchase_list.total_price %></td>
        <td><%= link_to 'Show', purchase_list %></td>
        <td><%= link_to 'Edit', edit_purchase_list_path(purchase_list) %></td>
        <td><%= link_to 'Destroy', purchase_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

