<p id="notice"><%= notice %></p>
<div class="col-md-12" style="margin-bottom:20px;">
	<div class="col-md-12">
		<div class="col-md-4">
<h1>Входящие накладные </br><small>сводная таблица</small></h1>
		</div>
		<div class="col-md-2">
		</div>
		<div class="col-md-6">
  		<form class="form-inline">
			<p><%= t 'search_t' %></p>
			<%= search_form_for @search do |f|%>
	  		<div classs = "search">
	  		<%= f.search_field :number_eq, placeholder: t('.number_eq'), class: "form-control input-sm"  %> 
	  		<%= f.search_field :status_cont, placeholder: t('.status_cont'), class: "form-control input-sm"  %>  
	  		<%= f.submit t('search'), class: 'btn btn-default btn-sm' %>
	  		</div>
			<% end %>
			</form>
  		</div>
		</div>
		<div class="col-md-12">
		<div class="col-md-5">
		<p><%=link_to t('.new_purchase_list'), new_purchase_list_path %></p>
		</div>
	</div>
</div>

<div class="col-md-12">
	<div class="media">
	  <div class="media-body">
		<table class="table table-hover">
  <thead>
    <tr>
      <th><%= t '.number' %></th>
      <th><%= sort_link(@search, :date, t('.date')) %></th>
      <th><%= t '.company' %></th>
      <th><%= t '.status' %></th>
      <th><%= t '.total' %></th>
      <th><%= t '.doc_status' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchase_lists.each do |purchase_list| %>
      <tr>
        <td><%= purchase_list.number %></td>
        <td><%= purchase_list.date.strftime("%d / %m / %Y") if !purchase_list.date.nil? %></td>
        <td><%= purchase_list.company.title if purchase_list.company !=nil %></td>
        <td><%= purchase_list.status %></td>
        <td><%= purchase_list.total_price %></td>
        <%if purchase_list.purchase_invoice_in.blank?%>
        <td>Не проведён</td>
        <%else%>
        <td>Проведён</td>
        <%end%>
        <td><%= link_to t('show'), purchase_list, class: 'btn btn-default btn-xs' %></td>
        <td><%= link_to t('edit'), edit_purchase_list_path(purchase_list), class: 'btn btn-success btn-xs' %></td>
        <td><%= link_to t('destroy'), purchase_list, method: :delete, class: 'btn btn-danger btn-xs', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @purchase_lists %>
	  </div>
	</div>
</div>
</div>
