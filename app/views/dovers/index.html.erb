<div id="modal-window" class="modal fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style = "background: white; margin: 50px;padding: 15px;"></div>
<p id="notice"><%= notice %></p>
<div class="col-md-12">
<div class="col-md-3">
<h2>Listing Dovers</h2>
</div>
<div class="col-md-3">
<%= link_to 'New Dover', new_dover_path , class: 'btn btn-sm btn-info'  %>
</div>
</div>
<div class="col-md-12">
<div class="media">
  <div class="media-body">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Number</th>
      <th>Startdate</th>
      <th>Enddate</th>
      <th>Subj</th>
      <th>Company</th>
      <th>User</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @dovers.each do |dover| %>
      <tr>
        <td><%= link_to dover.number, dover,  :remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window'%></td>
        <td><%= dover.startdate %></td>
        <td><%= dover.enddate %></td>
        <td><%= dover.subj %></td>
        <td><%= dover.company.title %></td>
        <td><%= dover.user.first_name %></td>
        <!--<td><%= link_to t('edit'), edit_dover_path(dover), class: 'btn btn-success btn-xs'  %></td>-->
        <td><%= link_to '<i class="glyphicon glyphicon-trash"></i>'.html_safe, dover, class: 'btn btn-danger btn-xs' , method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
</div>
</div>


