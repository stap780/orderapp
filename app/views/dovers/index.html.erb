<p id="notice"><%= notice %></p>

<h1>Listing Dovers</h1>
<%= link_to 'New Dover', new_dover_path %>
<div class="col-md-12">
<div class="media">
  <div class="media-body">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Number</th>
      <th>Startdate</th>
      <th>Enddate</th>
      <th>Subj</th>
      <th>Company</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dovers.each do |dover| %>
      <tr>
        <td><%= dover.number %></td>
        <td><%= dover.startdate %></td>
        <td><%= dover.enddate %></td>
        <td><%= dover.subj %></td>
        <td><%= dover.company.title %></td>
        <td><%= dover.user.first_name %></td>
        <td><%= link_to t('show'), dover, class: 'btn btn-default btn-xs'  %></td>
        <td><%= link_to t('edit'), edit_dover_path(dover), class: 'btn btn-success btn-xs'  %></td>
        <td><%= link_to t('destroy'), dover, class: 'btn btn-danger btn-xs' , method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
</div>
</div>


