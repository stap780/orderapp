<p id="notice"><%= notice %></p>
<div class="col-md-12" style="margin-bottom:20px;">
	<div class="col-md-12">
		<div class="col-md-3">
			<h1>Gstele<br><small>сводная таблица</small></h1>
			<p>Всего товаров - <%= Gstele.count %></p>
		</div>
		<div class="col-md-3">
		<%= form_tag import_gsteles_path, multipart: true do %><%= file_field_tag :file %><%= submit_tag "Import" , :class =>'btn btn-default btn-sm' %> (сделать из 2-х файлов один)
		<% end %>
		</div>
		<div class="col-md-6">
			<div class="col-md-12" >
		<form class="form-inline">
	<%=t 'search_t'%>
		<%= search_form_for @search do |f|%>
  		<div class = "form-group">
	  		<%= f.search_field :sku_eq, placeholder: 'Sku', class: "form-control input-sm" %>  
	  		<%= f.search_field :title_cont, placeholder: 'Названию', class: "form-control input-sm"  %>  
	  		</div>
	  		<%= f.submit "Search", class: 'btn btn-default btn-sm' %> 
	  		
			<% end %>
			</form>
			</div>
		</div>	
	</div>
<br>
	<div class="col-md-12">
		<div class="col-md-2">
		<p>Download: <%= link_to "CSV", gsteles_path(params.merge(format: 'csv')) %> | <%= link_to "Excel", gsteles_path(format: "xls") %></p>
		</div>
</div>

<br>
<div class="col-md-12">
<div class="media">
  <div class="media-body">
<table class="table table-hover">
  <thead>
    <tr>
      <th>id</th>
      <th>Sku</th>
      <th>Title</th>
      <th>Quantity</th>
      <th>Valute</th>
      <th>Cost price</th>
      <th>Price ($)</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gsteles.each do |gstele| %>
      <tr>
        <td class="gstele_id"><%= gstele.id %></td>
        <td><%= gstele.sku %></td>
        <td><%= gstele.title %></td>
        <td><%= gstele.quantity %></td>
        <td><%= gstele.valute %></td>
        <td><%= gstele.cost_price %></td>
        <td><%= gstele.price %></td>
        <td><%= link_to 'Show', gstele, class: 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Edit', edit_gstele_path(gstele), class: 'btn btn-success btn-xs'  %></td>
        <td><%= link_to 'Destroy', gstele, method: :delete, class: 'btn btn-danger btn-xs', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>

