<p id="notice"><%= notice %></p>
<div class="col-md-12" style="margin-bottom:20px;">
	<div class="col-md-12">
		<div class="col-md-2">
<h1>Компании <br><small>сводная таблица</small></h1>
		</div>
		<div class="col-md-3">
		</div>
		<div class="col-md-7"><p>Поиск</p>
		<%= search_form_for @search do |f|%>
  		<div classs = "search">
  		<%= f.label :inn_eq, 'ИНН' %> <!--расширение _eq используется для integer -->
  		<%= f.search_field :inn_eq %>  <%= f.submit "Search", class: 'btn btn-default btn-sm' %>
  		<%= f.label :title_cont, 'Названию' %> <!--расширение _cont используется для string -->
  		<%= f.search_field :title_cont %>  <%= f.submit "Search", class: 'btn btn-default btn-sm' %>
  		</div>
		<% end %>
		</div>
		<div class="col-md-12">
		<div class="col-md-5">
		<p><%=link_to 'New Company', new_company_path %></p>
		</div>
	</div>
</div>

<div class="col-md-12">
	<div class="media">
	  <div class="media-body">
		<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Fulltitle</th>
      <th>Uraddress</th>
      <!--<th>Factaddress</th>-->
      <th>Inn</th>
      <!--<th>Kpp</th>
      <th>Ogrn</th>
      <th>Okpo</th>
      <th>Bik</th>-->
      <th>Banktitle</th>
      <!--<th>Bankaccount</th>-->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.title %></td>
        <td><%= company.fulltitle %></td>
        <td><%= company.uraddress %></td>
        <!--<td><%= company.factaddress %></td>-->
        <td><%= company.inn %></td>
        <!--<td><%= company.kpp %></td>
        <td><%= company.ogrn %></td>
        <td><%= company.okpo %></td>
        <td><%= company.bik %></td>-->
        <td><%= company.banktitle %></td>
        <!--<td><%= company.bankaccount %></td>-->
        <td><%= link_to 'Show', company, class: 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Edit', edit_company_path(company), class: 'btn btn-success btn-xs' %></td>
        <td><%= link_to 'Destroy', company, method: :delete, class: 'btn btn-danger btn-xs', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @companies %>
	  </div>
	</div>
</div>
</div>