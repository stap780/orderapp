<p id="notice"><%= notice %></p>
<div class="col-md-12" style="margin-bottom:20px;">
	<div class="col-md-12">
		<div class="col-md-2">
<h1>Накладные <small>сводная таблица</small></h1>
		</div>
				<div class="col-md-3">
		</div>
		<div class="col-md-7"><p>Поиск</p>
		<%= search_form_for @search do |f|%>
  		<div classs = "search">
  		<%= f.label :number_eq, 'Номеру' %> <!--расширение _eq используется для integer -->
  		<%= f.search_field :number_eq %>  <%= f.submit "Search", class: 'btn btn-default btn-sm' %>
  		<%= f.label :status_cont, 'Статусу' %> <!--расширение _cont используется для string -->
  		<%= f.search_field :status_cont %>  <%= f.submit "Search", class: 'btn btn-default btn-sm' %>
  		</div>
		<% end %>
		</div>
		<div class="col-md-12">
		<div class="col-md-5">
		<p><%=link_to 'Создать накладную', new_invoice_list_path %></p>
		</div>
	</div>
</div>

<div class="col-md-12">
	<div class="media">
	  <div class="media-body">
		<table class="table table-hover">
  <thead>
    <tr>
      <th>Number</th>
      <th>Date</th>
      <th>Status</th>
      <th>Total price</th>
      <th>Client</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoice_lists.each do |invoice_list| %>
      <tr>
        <td><%= invoice_list.number %></td>
        <td><%= invoice_list.date.strftime("%d / %m / %Y")  %></td>
        <td><%= invoice_list.status %></td>
        <td><%= invoice_list.total_price %></td>
        <td><%= invoice_list.client.surname %> <%= invoice_list.client.name %></td>
        <td><%= invoice_list.company.title %></td>
        <td><%= link_to 'Show', invoice_list, class: 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Edit', edit_invoice_list_path(invoice_list), class: 'btn btn-success btn-xs'  %></td>
        <td><%= link_to 'Destroy', invoice_list, method: :delete, class: 'btn btn-danger btn-xs', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @invoices %>
	  </div>
	</div>
</div>
</div>


