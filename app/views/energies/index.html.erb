<p id="notice"><%= notice %></p>
<div class="col-md-12" style="margin-bottom:20px;">
	<div class="col-md-12">
		<div class="col-md-2">
			<h1>EnergyTechnology <small>сводная таблица</small></h1>
			<p>Всего товаров - <%= @totalenergies %></p>
		</div>
		<div class="col-md-3">
		
		<p>Import product</p>
		<p><%= form_tag import_energies_path, multipart: true do %></p>  <p><%= file_field_tag :file %></p>  <p><%= submit_tag "Import" %></p>
		<% end %>
		</div>
		<div class="col-md-7">
		<p>Поиск</p>
		<%= search_form_for @search do |f|%>
  		<div classs = "search">
  		<%= f.label :sku_cont, 'по SKU' %> <!--расширение _eq используется для integer -->
  		<%= f.search_field :sku_cont %>  <%= f.submit "Search", class: 'btn btn-default btn-sm' %>
 
  		<%= f.label :title_cont, 'Названию' %> <!--расширение _cont используется для string -->
  		<%= f.search_field :title_cont %>  <%= f.submit "Search", class: 'btn btn-default btn-sm' %>
		</div>
		<% end %>	
		</div>	
	</div>
<br>
	<div class="col-md-12">
		<div class="col-md-2">
		<p><%= link_to 'Update quantity', updateproduct_energies_path%> | Download: <%= link_to "CSV", energies_path(format: "csv") %> | <%= link_to "Excel", energies_path(format: "xls") %></p>

		</div>
</div>

<br>

<div class="col-md-12">
<div class="media">
  <div class="media-body">
<table class="table table-hover">
  <thead>
    <tr>
    <th><%= sort_link(@search, :id, "ID")%></th>
      <th>Sku</th>
      <th>Title</th>
      <th>Short desc</th>
      <th>Quantity</th>
      <th>Cost price</th>
      <th>Price</th>
      <!--<th>Desc</th>
      <th>Image url</th>-->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @energies.each do |energy| %>
      <tr>
      <td><%= energy.id %></td>
        <td><%= energy.sku %></td>
        <td><%= energy.title %></td>
        <td><%= energy.short_description %></td>
        <td><%= energy.quantity %></td>
        <td><%= energy.cost_price %></td>
        <td><%= energy.price %></td>
        <!--<td><%= energy.description %></td>
        <td><%= energy.image_url %></td>-->
        <td><%= link_to 'Show', energy, class: 'btn btn-default btn-sm' %></td>
        <td><%= link_to 'Edit', edit_energy_path(energy), class: 'btn btn-success btn-sm' %></td>
        <td><%= link_to 'Destroy', energy, method: :delete,class: 'btn btn-danger btn-sm', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>

