<p id="notice"><%= notice %></p>

<h1>Listing Kurs</h1>
<%= link_to 'Загрузить курс', updatekurs_kurs_path%>
<br>
<%= link_to 'New Kur', new_kur_path %>
<div class="col-md-12">
<div class="media">
  <div class="media-body">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Dollar</th>
      <th>Euro</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kurs.each do |kur| %>
      <tr>
        <td><%= kur.date.strftime("%d/%m/%Y") %></td>
        <td><%= kur.dollar %></td>
        <td><%= kur.euro %></td>
        <td><%= link_to 'Show', kur %></td>
        <td><%= link_to 'Edit', edit_kur_path(kur) %></td>
        <td><%= link_to 'Destroy', kur, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

  </div>
</div>
</div>