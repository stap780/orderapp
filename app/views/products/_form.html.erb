<%= simple_form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	
<div class="col-md-12">
	<div class="col-md-12">
	<div class="col-md-6">
		<div class="col-md-4">  
		<%= f.input :sku %>
		</div>
		<div class="col-md-8"> 
		<%= f.input :title %>
		</div>
		<div class="col-md-12">  
		<%= f.input :short_description %>
		</div>
	</div>
	<div class="col-md-6">
		<div class="col-md-4">  
		<%= f.input :quantity %>
		</div>
		<div class="col-md-8">  
		<%= f.input :cost_price %>
		</div>
		<div class="col-md-6">  
		<%= f.input :sell_price %>
		</div>
		<div class="col-md-6">   
		<%= f.input :price %>
		</div>
	</div>
	<div class="col-md-12">
	<div class='links'>
			<%= link_to_add_association 'add variant', f, :variants, 'data-association-insertion-node' => "#variants", 'data-association-insertion-method' => "append" %>
			</div>
		<div class="col-md-12" style="margin-top:20px;" >
		<table class="table table-hover" id="variants">
		<thead>
			<tr>
			<th>sku</th>
			<th>quantity</th>
			<th>cost_price</th>
			<th>price</th>
			<th>old_price</th>
			<th>weight</th>
			<th>Поставщик</th>
			<th>ID поставщика</th>
			</tr>
		</thead>
		<%= f.simple_fields_for :variants do |variant| %>
		<%= render 'variant_fields', :f => variant %>
		<% end %>
		</table>
		</div>
	</div>
	<div class="col-md-12">  
		<div class="col-md-6">
			<%= f.button :submit, class: 'btn btn-default btn-sm' %>
			<!--<%= link_to 'Show', @product, class: 'btn btn-default btn-sm'  %>-->
			<%= link_to 'Back', products_path, class: 'btn btn-default btn-sm'  %>
		</div>
	</div>
	</div>

</div>
<% end %>
