
<div class="modal-header">
<h2 style="float: left;">Информация о заказе <%= @bank.number %></h2>
<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
</div>
<div class="modal-body">

<p id="notice"><%= notice %></p>

<p>
  <strong>Number:</strong>
  <%= @bank.number %>
</p>

<p>
  <strong>Type:</strong>
  <%= @bank.oper_type %>
</p>

<p>
  <strong>Sum:</strong>
  <%= @bank.sum %>
</p>

<p>
  <strong>Description:</strong>
  <%= @bank.description %>
</p>

<p>
  <strong>Date:</strong>
  <%= @bank.date %>
</p>

<p>
  <strong>Payer:</strong>
  <%= @bank.payer.title %>
</p>

<p>
  <strong>Receiver:</strong>
  <%= @bank.receiver.title %>
</p>

<p>
  <strong>Invoice:</strong>
  <%if @bank.oper_type == "К"%>
		<%@bank.bank_items.each do |bbi|%>
		<%= bbi.invoice.number%>
		<%end%>
		<%else%>
		<%@bank.bank_items.each do |bbi|%>
		<%= bbi.purchase_invoice.number%>
		<%end%>
	<%end%>
</p>

	<div class="col-md-12">
	<%= link_to t('edit'), edit_bank_path(@bank), class: 'btn btn-default btn-sm' %> 
	<%= link_to t('back'), banks_path, class: 'btn btn-default btn-sm my_close'%> 
		</div>
</div>