<%= simple_form_for(@bank) do |f| %>
  <%= f.error_notification %>

  <div class="col-md-6">
    <%= f.input :number %>
    <%= f.input :oper_type %>
    <%= f.input :sum %>
    <%= f.input :description %>
  </div>
  <div class="col-md-6">
    <%= f.input :date %>
    <%= f.association :payer%>
    <%= f.association :receiver %>
    <%= f.association :invoice , :collection => @comp_invoices.map { |r| [r.number, r.id] } if @comp_invoices !=nil %>
  </div>

			<div class="col-md-12">
	<%= link_to t('show'), @bank,  class: 'btn btn-default btn-sm' %>
	<%= link_to t('back'), banks_path, class: 'btn btn-default btn-sm' %>
	<%= f.button :submit, class: 'btn btn-primary btn-sm'  %>
			</div>

<% end %>
