<p id="notice"><%= notice %></p>
<div class="col-md-12" style="margin-bottom:20px;">
	<div class="col-md-12">
		<div class="col-md-2">
<h1>Счета <small>сводная таблица</small></h1>
		</div>
		<div class="col-md-3">
		</div>
		<div class="col-md-7"><p>Поиск</p>
		<%= search_form_for @search do |f|%>
  		<div classs = "search">
  		<%= f.label :number_eq, 'Номеру' %> <!--расширение _eq используется для integer -->
  		<%= f.search_field :number_eq %>  <%= f.submit "Search", class: 'btn btn-default btn-sm' %>
  		<%= f.label :invstatus_cont, 'Статусу' %> <!--расширение _cont используется для string -->
  		<%= f.search_field :invstatus_cont %>  <%= f.submit "Search", class: 'btn btn-default btn-sm' %>
  		</div>
		<% end %>
		</div>
		<div class="col-md-12">
		<div class="col-md-5">
		<p><%=link_to 'New Invoice', new_invoice_path %></p>
		</div>
	</div>
</div>

<div class="col-md-12">
	<div class="media">
	  <div class="media-body">
		<table class="table table-hover">
  <thead>
    <tr>
      <th>Number</th>
      <th>Date</th>
      <th>Client</th>
      <th>Company</th>
      <th>Invstatus</th>
      <th>Discount</th>
      <th>Total price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.number %></td>
        <td><%= invoice.date.strftime("%d / %m / %Y")  %></td>
        <td><%= invoice.client.surname if invoice.client !=nil%> <%= invoice.client.name if invoice.client !=nil%></td>
        <td><%= invoice.company.title if invoice.company !=nil%>
        <td><%= invoice.invstatus %></td>
        <td><%= invoice.discount %></td>
        <td><%= invoice.total_price %></td>
        <td><%= link_to 'Show', invoice, class: 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Edit', edit_invoice_path(invoice), class: 'btn btn-success btn-xs' %></td>
        <td><%= link_to 'Destroy', invoice, method: :delete, class: 'btn btn-danger btn-xs', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @invoices %>
	  </div>
	</div>
</div>
</div>
