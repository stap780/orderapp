<p id="notice"><%= notice %></p>

<h1>Listing Product Options</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Opt value inid</th>
      <th>Opt name inid</th>
      <th>Title</th>
      <th>Supplier name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_options.each do |product_option| %>
      <tr>
        <td><%= product_option.id %></td>
        <td><%= product_option.opt_value_inid %></td>
        <td><%= product_option.opt_name_inid %></td>
        <td><%= product_option.title %></td>
        <td><%= product_option.supplier_name %></td>
        <td><%= link_to 'Show', product_option %></td>
        <td><%= link_to 'Edit', edit_product_option_path(product_option) %></td>
        <td><%= link_to 'Destroy', product_option, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

