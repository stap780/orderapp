
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
  </div>
  <div class="modal-body">
<p id="notice"><%= notice %></p>

<div class="col-md-12">
<div class="col-md-8">
<h1>Информация о счёте <%= @purchase_invoice.number %></h1>

<p>
  <strong>Date:</strong>
  <%= @purchase_invoice.date.strftime("%d / %m / %Y")  %>
</p>

<p>
  <strong>Company:</strong>
  <%= @purchase_invoice.company.title if @purchase_invoice.company !=nil %>
</p>
</div>
	<div class="col-md-4">
	<div class="col-md-12">
	  <strong>Status:</strong>
	  <%= @purchase_invoice.status %>
	</div>
	<div class="col-md-12">
	  <strong>Входящая накладная:</strong>
	  <% if @purchase_invoice.purchase_list_check == true%>
	  <%= "Выписана" %>
	  <%else %>
	  <%= "Не выписана" %> 
	  <%end%>
	</div>
	</div>
</div>
<div class="col-md-12">
<div class="col-md-8">
<strong>Информация о товарах в заказе</strong>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Sum</th>
    </tr>
  </thead>

  <tbody>
    <% @purchase_invoice.purchase_invoice_items.each do |pr| %>
      <tr>
        <td><%=link_to "#{pr.title}", pr.product %></td>
        <td><%= pr.quantity %></td>
        <td><%= pr.price %></td>
        <td><%= pr.sum %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<div class="col-md-4" style="margin-top:40px;">

<p>
  <strong>Total Price:</strong>
  <%= @purchase_invoice.total_price %>
</p>

</div>
</div>


<div class="col-md-12">
<%= link_to 'Edit', edit_purchase_invoice_path(@purchase_invoice), class: 'btn btn-default btn-sm' %> 
<%= link_to 'Back', purchase_invoices_path, class: 'btn btn-default btn-sm' %>
</div>
  </div>