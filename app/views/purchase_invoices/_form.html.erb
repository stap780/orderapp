<%= simple_form_for(@purchase_invoice) do |f| %>
  <%= f.error_notification %>
<div class="col-md-12">
	<div class="col-md-8">
		<div class="col-md-12">
			<div class="col-md-2">
			    <%= f.input :number %>
			</div>
			<div class="col-md-10">
			    <%= f.input :date, order: [:day, :month, :year]  %>
			</div>
		</div>
		<div class="col-md-12">
			<div class="col-md-3">
			 <%= f.input :company_title, as: :autocomplete, url:  autocomplete_company_title_purchase_invoices_path, input_html: { 'data-id-element' => '#purchase_invoice_company_id' }  %>
			 <%= f.input :company_id, as: :hidden %>
			 </div>
		</div>
	</div>
	
	<div class="col-md-4">
	<div class="col-md-6">
	    <%= f.input :status, collection: [ "Новый", "В работе", "Получены документы"] %>
	</div>
	<div class="col-md-6">
	    <%= f.input :purchase_list_check %>
	</div>
	</div>
</div>

<div class="col-md-12" style="border-top:1px solid #ddd;">
		<div class="col-md-8" style="margin-top:20px;">
		<table class="table table-hover" id="purchase_invoice_items">
			<thead>
			<tr>
			<th colspan="1"></th>
			<th>Title</th>
			<th>Quantity</th>
			<th>Price</th>
			<th>Sum</th>
			<th colspan="1"></th>
			</tr>
			</thead>
		   <%= f.simple_fields_for :purchase_invoice_items do |purchase_invoice_item| %>
			<%= render 'purchase_invoice_item_fields', :f => purchase_invoice_item %>
			<% end %>
		</table>
			<div class='links', style="float:left;">
			<%= link_to_add_association 'add line', f, :purchase_invoice_items, 'data-association-insertion-method' => "prepend"%>
			</div>
		
	</div>
	
<div class="col-md-4" style="margin-top:20px;">
	<div class="col-md-12">
	<%= f.button :submit, class: 'btn btn-default btn-sm' %>
	<%= link_to 'Show', @purchase_invoice, class: 'btn btn-default btn-sm'  %>
	<%= link_to 'Back', purchase_invoices_path, class: 'btn btn-default btn-sm'  %>
	</div>
	<div class="col-md-6" style="margin-top:20px;">
	<p>
		<%= f.input :total_price %>
	</p>
	</div>
</div>

</div>    

<% end %>
</div>

