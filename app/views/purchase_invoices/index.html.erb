<p id="notice"><%= notice %></p>
<div class="col-md-12" style="margin-bottom:20px;">
	<div class="col-md-12">
		<div class="col-md-2">
<h1>Входящие счета </br><small>сводная таблица</small></h1>
		</div>
		<div class="col-md-3">
		</div>
		<div class="col-md-7"><p>Поиск</p>
		<%= search_form_for @search do |f|%>
  		<div classs = "search">
  		<%= f.label :number_eq, 'Номеру' %> 
  		<%= f.search_field :number_eq %>  <%= f.submit "Search", class: 'btn btn-default btn-sm' %>
  		<%= f.label :status_cont, 'Статусу' %> 
  		<%= f.search_field :status_cont %>  <%= f.submit "Search", class: 'btn btn-default btn-sm' %>
  		</div>
		<% end %>
		</div>
		<div class="col-md-12">
		<div class="col-md-5">
		<p><%=link_to 'New Invoice', new_purchase_invoice_path %></p>
		</div>
	</div>
</div>

<div class="col-md-12">
	<div class="media">
	  <div class="media-body">
		<table class="table table-hover">
  <thead>
    <tr>
      <th>Number</th>
      <th>Date</th>
      <th>Company</th>
      <th>Status</th>
      <th>Total price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchase_invoices.each do |purchase_invoice| %>
      <tr>
        <td><%= purchase_invoice.number %></td>
        <td><%= purchase_invoice.date.strftime("%d / %m / %Y") %></td>
        <td><%= purchase_invoice.company.title if purchase_invoice.company !=nil %></td>
        <td><%= purchase_invoice.status %></td>
        <td><%= purchase_invoice.total_price %></td>
        <td><%= link_to 'Show', purchase_invoice, class: 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Edit', edit_purchase_invoice_path(purchase_invoice), class: 'btn btn-success btn-xs' %></td>
        <td><%= link_to 'Destroy', purchase_invoice, method: :delete, class: 'btn btn-danger btn-xs', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @invoices %>
	  </div>
	</div>
</div>
</div>
