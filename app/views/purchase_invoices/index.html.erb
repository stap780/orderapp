<div id="modal-window" class="modal fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style = "background: white; margin: 50px;padding: 15px;"></div>
<p id="notice"><%= notice %></p>
<div class="col-md-12" style="margin-bottom:20px;">
	<div class="col-md-12">
		<div class="col-md-4">
<h1>Входящие счета </br><small>сводная таблица</small></h1>
		</div>
		<div class="col-md-2">
		</div>
		<div class="col-md-6">  		
  		<form class="form-inline">
			<p><%= t 'search_t' %></p>
			<%= search_form_for @search do |f|%>
	  		<div classs = "search">
	  		<%= f.search_field :number_eq, placeholder: t('.number_eq'), class: "form-control input-sm"  %> 
	  		<%= f.search_field :status_cont, placeholder: t('.status_cont'), class: "form-control input-sm"  %>  
	  		<%= f.submit t('search'), class: 'btn btn-default btn-sm' %>
	  		</div>
			<% end %>
			</form>
		</div>
		<div class="col-md-12">
		<div class="col-md-5">
		<p><%=link_to t('.new_invoice'), new_purchase_invoice_path   %></p>
		</div>
	</div>
</div>

<div class="col-md-12">
	<div class="media">
	  <div class="media-body">
		<table class="table table-hover">
  <thead>
    <tr>
      <th><%= t '.number' %></th>
      <th><%= sort_link(@search, :date, t('.date')) %></th>
      <th><%= t '.company' %></th>
      <th><%= t '.status' %></th>
      <th><%= t '.total' %></th>
      <th><%= t '.purchase_list' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchase_invoices.each do |purchase_invoice| %>
      <tr>
        <td><%= purchase_invoice.number %></td>
        <td><%= purchase_invoice.date.strftime("%d / %m / %Y") %></td>
        <td><%= purchase_invoice.company.title if purchase_invoice.company !=nil %></td>
        <td><%= purchase_invoice.status %></td>
        <td><%= purchase_invoice.total_price %></td>
        <%if purchase_invoice.purchase_lists.blank?%>
        <td>Не введена</td>
        <%else%>
        <td><%=purchase_invoice.purchase_lists.first.number%> (<%=purchase_invoice.purchase_lists.first.date.strftime("%d/%m/%Y")%>)</td>
        <%end%>
        <td><%= link_to t('show'), purchase_invoice,  :remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window' , class: 'btn btn-default btn-xs' %></td>
        <td><%= link_to t('edit'), edit_purchase_invoice_path(purchase_invoice), class: 'btn btn-success btn-xs' %></td>
        <td><%= link_to t('destroy'), purchase_invoice, method: :delete, class: 'btn btn-danger btn-xs', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @invoices %>
	  </div>
	</div>
</div>


</div>
