<h1>Заказы<small>сводная таблица</small></h1>

<div class="media">
  <div class="media-body">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Order number</th>
      <th>Order status</th>
      <th>Order payment status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.order_number %></td>
        <td><%= order.orderstatus.title %></td>
        <td><%= order.order_payment_status %></td>
        <td><%= link_to 'Show', order, class: 'btn btn-default'  %></td>
        <td><%= link_to 'Edit', edit_order_path(order), class: 'btn btn-success'  %></td>
        <td><%= link_to 'Destroy', order, method: :delete, class: 'btn btn-danger',  data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
</div>
